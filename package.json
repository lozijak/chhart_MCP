{
  "name": "chhart-mcp",
  "version": "1.0.1",
  "description": "MCP server for creating flowcharts and Sankey diagrams on chhart.app",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "chhart-mcp": "dist/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "start": "node dist/index.js",
    "start:sse": "node dist/server-sse.js",
    "start:streamable": "node dist/server-streamable.js",
    "dev": "tsc && node dist/index.js",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "chhart",
    "flowchart",
    "sankey",
    "diagram"
  ],
  "author": "Chhart.app",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/alwank/chhart_MCP.git"
  },
  "bugs": {
    "url": "https://github.com/alwank/chhart_MCP/issues"
  },
  "homepage": "https://github.com/alwank/chhart_MCP#readme",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "express": "^4.18.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "typescript": "^5.3.3"
  }
}
