{
  "name": "chhart-mcp-server",
  "version": "1.0.0",
  "description": "MCP server for creating flowcharts and Sankey diagrams on chhart.app",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "chhart-mcp": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "start": "node dist/index.js",
    "start:sse": "node dist/server-sse.js",
    "dev": "tsc && node dist/index.js",
    "prepare": "npm run build"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "chhart",
    "flowchart",
    "sankey",
    "diagram"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "express": "^4.18.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "typescript": "^5.3.3"
  }
}